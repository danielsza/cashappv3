{
  "name": "gm-parts-receiving",
  "version": "1.0.0",
  "description": "GM Parts Receiving - Barcode scanning, PWB+ comparison, Woodstock form generation",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "node server.js",
    "install-service": "node service-install.js",
    "uninstall-service": "node service-uninstall.js",
    "electron-dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env ELECTRON_DEV=1 electron .\"",
    "electron-build": "vite build && electron-builder --win",
    "electron-start": "cross-env ELECTRON_DEV=1 electron ."
  },
  "build": {
    "appId": "com.gmparts.receiving",
    "productName": "GM Parts Receiving",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server.js"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "electron/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "imapflow": "^1.2.10",
    "node-windows": "^1.0.0-beta.8",
    "pdf-lib": "^1.17.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "vite": "^6.0.0",
    "wait-on": "^8.0.0"
  }
}
